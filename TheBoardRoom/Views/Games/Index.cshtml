@model IEnumerable<TheBoardRoom.Models.Game>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Our Games
            <small>Secondary Text</small>
        </h1>
    </div>
</div>
<!-- /.row -->
<!-- Project One -->
@foreach (TheBoardRoom.Models.Game game in Model)
{ 
<div class="row">
    <div class="col-md-7">
        <a href="#">
            <img class="img-responsive" src="@game.SmallImage" alt="">
        </a>
    </div>
    <div class="col-md-5">
        <h3>@Html.ActionLink(game.Name, "Details", new { id = game.GameID })</h3>
        <p>@game.Description</p>
        <p>For @game.MinPlayers - @game.MaxPlayers players</p>
        @Html.ActionLink("Details", "Details", new { id = game.GameID }, new { @class = "btn btn-primary" })
        
    </div>
</div>
    
<hr/>
}







